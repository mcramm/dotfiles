
" General options
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

set foldmethod=indent
set autoindent
set smartindent

syntax on
filetype on
filetype plugin on

" syntax highlighting options
:let php_baselib=1
:let php_sql_query=1

" enable the project plugin
:let g:proj_flags="imstvcg"
