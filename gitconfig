[user]
	email = GMCramm@gmail.com
	name = mcramm
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status
  aa = add .
	ci = commit
  civ = commit -v
	br = branch
	co = checkout
	df = diff
	lg = log -p
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  r = !git l -30
  ra = !git l -30 --all
  m = merge
  mff = merge --ff-only
  mre = merge --no-ff
  wc = whatchanged --oneline
	unstage = reset HEAD --
	last = log -1 HEAD
  nl = log --pretty=format:'%h : %an(%ad) - %s' --graph --date=short
  lin = log --pretty=format:'%h : %an(%ad) - %s' --no-merges --date=short
  linV = log --pretty=format:'%h : %an(%ad) - %s\n\t%b' --no-merges --date=short
  propermerge = merge --squash --ff-only --no-commit
  fp = fetch public
  fo = fetch origin
  aa = add .
  ca = commit -a
  mod = merge --ff-only origin/dev
  mom = merge --ff-only origin/master
  pod = pull --ff-only origin dev
  pom = pull --ff-only origin master

[apply]
	whitespace = fix
[push]
	default = tracking
[github]
  user = mcramm
[core]
	editor = /usr/bin/vim
